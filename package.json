{
  "name": "webpack-dev",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "run-p webpack:watch serve task:watch",
    "task:watch": "node task-watch.js",
    "webpack:watch": "webpack --watch",
    "serve": "browser-sync start --config bs-config.cjs",
    "build": "webpack --mode production",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "lint:css": "stylelint 'src/**/*.scss' --fix",
    "lint:all": "run-p lint lint:css markup",
    "clean": "rm -rf htdocs/nadia_css htdocs/nadia_js",
    "markup": "markuplint -f JSON htdocs/**/**.html --fix --config .markuplintrc",
    "lint:ci": "run-s lint:js:ci lint:css:ci markup:ci",
    "lint:js:ci": "eslint 'src/**/*.{js,ts}' --format json --output-file eslint-report.json",
    "lint:css:ci": "stylelint 'src/**/*.scss' --formatter json > stylelint-report.json",
    "markup:ci": "markuplint -f JSON htdocs/**/*.html > markuplint-report.json"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/jquery": "^3.5.32",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^3.0.4",
    "chokidar": "^4.0.1",
    "css-loader": "^7.1.2",
    "eslint-config-prettier": "^10.1.5",
    "glob": "^11.0.3",
    "globals": "^16.2.0",
    "jquery": "^3.7.1",
    "markuplint": "^4.12.0",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.14.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^6.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.0.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.33"
  }
}
